{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "STORYBLOK_PERSONAL_ACCESS_TOKEN",
        "STORYBLOK_SPACE_ID",
        "STORYBLOK_PREVIEW_ACCESS_TOKEN",
        "STORYBLOK_PUBLIC_ACCESS_TOKEN"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
